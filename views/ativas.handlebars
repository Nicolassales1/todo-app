

<main>
    <section class="tarefas">
        {{#each tarefas }}
        <div class="tarefa">
            <form action="">

                <div>
                    <input type="checkbox" id="Tarefa-{{this.id}}" onchange="completartarefa({{this.id}})">
                    <label for="tarefa-{{this.id}}">{{this.descricao}}</label>
                </div>

                <button onclick="excluirTarefa({{this.id}})">
                    <img src="/imagens/x-icon.png" alt="icone de X para excluir uma tarefa">
                </button>
            </form>
        </div>

        {{/each}}
        <div class="informacoes">
            <p>{{quantidadeTarefas}} Tarefas Ativas</p>

            <div class="botoes">
                <a href="/">Todas</a>
                <a href="/ativas" class="active">Ativas</a>
                <a href="/completas">Completas</a>
                <a href="/limpartarefas">Limpar Tarefas</a>
            </div>


        </div>
    </section>

    <section class="botoes">
        <a href="/">Todas</a>
        <a href="/ativas" class="active">Ativas</a>
        <a href="/completas">Completas</a>
    </section>
</main>
