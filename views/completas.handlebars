<main>
    <section class="tarefas">
        {{#each tarefas }}
        <div class="tarefa">
            <form action="">
                <div class="completa">
                    <input type="checkbox" id="Tarefa-{{this.id}}" onchange="descompletartarefa({{this.id}})" checked>
                    <label for="tarefa-{{this.id}}">{{this.descricao}}</label>
                </div>

                <button>
                    <img src="/imagens/x-icon.png" alt="icone de X para excluir uma tarefa">
                </button>
            </form>
        </div>

        {{/each}}
        <div class="informacoes">
            <p>{{quantidadeTarefas}} Tarefas Completas</p>

            <div class="botoes">
                <a href="/">Todas</a>
                <a href="/ativas" >Ativas</a>
                <a href="/completas"class="active">Completas</a>
                <a href="">Limpar Tarefas</a>
            </div>


        </div>
    </section>

    <section class="botoes">
        <a href="/">Todas</a>
        <a href="/ativas" class="active">Ativas</a>
        <a href="/completas"class="active"></a>Completas</a>
    </section>
</main>